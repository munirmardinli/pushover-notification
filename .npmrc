; ======================================
; Registry & Authentication
; ======================================
@munirmardinli-dev:registry=https://npm.pkg.github.com
//npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}

; ======================================
; Dependency Resolution & Installation
; ======================================
legacy-peer-deps=true
strict-peer-deps=true
package-lock=true
install-strategy=shallow
prefer-offline=true
prefer-dedupe=true 
save-exact=true           # Vermeidet doppelte Pakete

; ======================================
; Network & Performance
; ======================================
maxsockets=50
fetch-retries=3
fetch-retry-mintimeout=1000
fetch-retry-maxtimeout=60000

; ======================================
; Logging & Output
; ======================================
loglevel=warn
progress=true
timing=true
color=true
fund=false

; ======================================
; Security
; ======================================
strict-ssl=true
audit=false
ignore-scripts=false
engine-strict=true 
